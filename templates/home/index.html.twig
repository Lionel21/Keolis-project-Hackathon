{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="connexion">
        {% if app.user %}
            {{ app.user.firstname }}
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
            <a href="{{ path('app_profile') }}">Mon profil</a>
        {% else %}
            <div>
                <a href="{{ path('app_login') }}"><i class="fas fa-user fa-2x"></i></a>
            </div>
            <div>
                <a href="{{ path('app_register') }}"><i class="fa fa-user-plus fa-2x"></i></a>
            </div>
        {% endif %}
    </div>

<div class="js-stations" data-stations="{{ stations|json_encode|e('html_attr') }}">
</div>
<div class="d-flex justify-content-center">
    <div class="mt-5 mb-5" id="map"></div>
</div>

<nav class="navbar fixed-bottom">

    <a class="navbar-brand" href="#">
        <div class="iconFlex">
            <i class="fas fa-home fa-2x"></i>
            <div>
                <p class="titleNav">Accueil</p>
            </div>
        </div>
    </a>

    <a class="navbar-brand" href="#">
        <div class="iconFlex">
            <i class="fas fa-euro-sign fa-2x"></i>
            <div>
                <p class="titleNav">Tarifs</p>
            </div>
        </div>
    </a>

    <a class="navbar-brand" href="#">
        <div class="iconFlex">
            <i class="fas fa-biking fa-2x"></i>
            <div>
                <p class="titleNav">Disponibilités</p>
            </div>
        </div>
    </a>

    <a class="navbar-brand" href="#">
        <div class="iconFlex">
            <i class="fas fa-trophy fa-2x"></i>
            <div>
                <p class="titleNav">Rang</p>
            </div>
        </div>
    </a>

    <a class="navbar-brand" href="#">
        <div class="iconFlex">
            <i class="fas fa-users fa-2x"></i>
            <div>
                <p class="titleNav">Profil</p>
            </div>
        </div>
    </a>

</nav>



{% endblock %}
